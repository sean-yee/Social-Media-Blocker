{
  "name": "Lebron James Social Media Blocker",
  "description": "Blocks distracting social media sites. Allows customization for what sites get blocked.",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": ["declarativeNetRequest", "declarativeNetRequestWithHostAccess", "tabs", "storage"],
  "host_permissions": [
    "*://*.tiktok.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.twitch.tv/*",
    "*://*.snapchat.com/*",
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["blocked_page.html", "audio/blocked-by-james.mp3"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/lebron.png"
  }
}
